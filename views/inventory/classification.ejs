<div class="inventory-page">

    <% if (title) { %>
        <section class="inv-header">
            <h1><%= title %></h1>
            <p>Explore our car lineup</p>
        </section>
    <% } else { %>
        <% res.redirect('/') %>
    <% } %>

    <!-- Server message -->
    <% if (messages && messages().length > 0) { %>
        <section class="inv-messages">
            <%- messages() %>
        </section>
    <% } %>

    <!-- Grid cars -->
    <div class="inv-grid">
        <%- grid %>
    </div>

</div>
