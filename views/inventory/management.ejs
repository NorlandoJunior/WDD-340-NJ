<div class="management-page">

  <!-- Navigation -->
  <%- nav %>

  <!-- Page Header -->
  <header class="management-header">
    <h1>Inventory Management</h1>
    <p>Manage vehicle classifications and inventory items.</p>
  </header>

  <!-- Flash Messages -->
  <% if (locals.notice) { %>
    <div class="flash-message">
      <p><%= notice %></p>
    </div>
  <% } %>

  <!-- Management Options -->
  <section class="management-actions">
    <h2>What would you like to do?</h2>

    <ul class="management-links">
      <li>
        <a href="/inv/add-classification" class="btn-primary">
          Add New Classification
        </a>
      </li>

      <li>
        <a href="/inv/add-inventory" class="btn-secondary">
          Add New Inventory Item
        </a>
      </li>
    </ul>
  </section>

</div>
