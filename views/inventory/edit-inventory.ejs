<h1>Edit <%= inv_make %> <%= inv_model %></h1>

<!-- Display Server-Side Validation Errors -->
<% if (errors && errors.length > 0) { %>
  <div class="error-box">
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form action="/inv/update" method="post" id="inventory-form">

  <!-- REQUIRED: Hidden Field to Pass Inventory ID -->
  <input type="hidden" name="inv_id" value="<%= inv_id %>">

  <!-- CLASSIFICATION SELECT -->
  <label for="classification_id">Classification</label>
  <%- classificationSelect %>

  <!-- MAKE -->
  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" 
         value="<%= inv_make %>" required>

  <!-- MODEL -->
  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" 
         value="<%= inv_model %>" required>

  <!-- YEAR -->
  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" min="1900" max="2100"
         value="<%= inv_year %>" required>

  <!-- DESCRIPTION -->
  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>

  <!-- IMAGE -->
  <label for="inv_image">Image Path</label>
  <input type="text" id="inv_image" name="inv_image" 
         value="<%= inv_image %>" required>

  <!-- THUMBNAIL -->
  <label for="inv_thumbnail">Thumbnail Path</label>
  <input type="text" id="inv_thumbnail" name="inv_thumbnail"
         value="<%= inv_thumbnail %>" required>

  <!-- PRICE -->
  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" 
         value="<%= inv_price %>" required>

  <!-- MILES -->
  <label for="inv_miles">Miles</label>
  <input type="number" id="inv_miles" name="inv_miles"
         value="<%= inv_miles %>" required>

  <!-- COLOR -->
  <label for="inv_color">Color</label>
  <input type="text" id="inv_color" name="inv_color"
         value="<%= inv_color %>" required>

  <button type="submit" class="btn-primary">Update Vehicle</button>
</form>
