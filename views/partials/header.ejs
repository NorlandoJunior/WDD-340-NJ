<header id="top-header">
    <span class="SiteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>

    <div id="tools">
        <% if (locals.loggedin && locals.accountData) { %>
            <a href="/account/" title="Login">
                <%= locals.accountData.account_firstname %> <%= locals.accountData.account_lastname %>
            </a>
            |
            <a href="/account/logout" title="Logout">Logout</a>
        <% } else { %>
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>
